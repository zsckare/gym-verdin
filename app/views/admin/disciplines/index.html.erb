<div class="row">
  <div class="col-sm">
    <div class="row">
      <div class="col-sm">
        <h5>Lista de disciplinas</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
          <table class="table">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @disciplines.each do |discipline| %>
                  <tr>
                    <td><%= discipline.name %></td>
                    <td><%= link_to 'Editar', edit_discipline_path(discipline) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            
            
            <%= link_to 'Nueva Disciplina', new_admin_discipline_path %>
      </div>
    </div>
  </div>
</div>

