<p id="notice"><%= notice %></p>

<h1>Ejercicios</h1>

<table class="table striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.group_by(&:category).each do |category,exercises| %>
      <tr>
        <td>
            <h4><%=category.name%></h4>
        </td>
      </tr>
      <%exercises.each do |ex|%>
        <tr>
          
          <td><%= ex.name %></td>
          <td><%= link_to 'Ver', admin_exercise_path(ex) %></td>
          <td><%= link_to 'Editar', edit_admin_exercise_path(ex) %></td>
          <td><%= link_to 'Eliminar', ex, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise', new_exercise_path %>
